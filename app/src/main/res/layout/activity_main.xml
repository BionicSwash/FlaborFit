<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tonyrei.flaborfit.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#2ca5f5"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/weightButn">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/weight"
            android:layout_above="@+id/percentCompleteButn"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:id="@+id/weightIm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="30%"
            android:id="@+id/percentCompleteButn"
            android:textSize="40sp"
            android:paddingRight="20dp"
            android:linksClickable="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Weight Lifting"
            android:id="@+id/weightLiftText"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:paddingBottom="20dp"
            android:layout_alignBottom="@+id/percentCompleteButn"
            android:layout_alignParentStart="true"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="You even lift, Bro?"
            android:id="@+id/liftTxt"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:textSize="18dp"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="10 Sets"
            android:id="@+id/textView"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentRight="false"
            android:gravity="right"
            android:textColor="@color/abc_primary_text_material_dark" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#916bcd"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/lotusButn">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yogaIm"
            android:background="@drawable/lotus"
            android:layout_above="@+id/textView2"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@+id/textView5"
            android:layout_alignEnd="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="12%"
            android:id="@+id/textView2"
            android:textSize="40sp"
            android:paddingRight="20dp"
            android:linksClickable="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Yoga"
            android:id="@+id/yogaTxt"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:paddingBottom="20dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentStart="true"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Namaste"
            android:id="@+id/textView4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:textSize="18dp"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="poses"
            android:id="@+id/textView5"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentRight="false"
            android:gravity="right"
            android:textColor="@color/abc_primary_text_material_dark" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#52ad56"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/heartButn">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heartim"
            android:background="@drawable/heart"
            android:layout_above="@+id/textView6"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@+id/textView9"
            android:layout_alignEnd="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="10%"
            android:id="@+id/textView6"
            android:textSize="40sp"
            android:paddingRight="20dp"
            android:linksClickable="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cardio"
            android:id="@+id/textView7"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:paddingBottom="20dp"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentStart="true"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Miles"
            android:id="@+id/textView8"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:textSize="18dp"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="5 miles"
            android:id="@+id/textView9"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentRight="false"
            android:gravity="right"
            android:textColor="@color/abc_primary_text_material_dark" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="381dp"
        android:layout_height="42dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#00ffffff"
        android:foregroundGravity="left|bottom"
        android:gravity="bottom|right"
        android:paddingBottom="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settingsButn"
            android:src="@drawable/gear"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:backgroundTint="#00ffffff" />
    </RelativeLayout>

</LinearLayout>
